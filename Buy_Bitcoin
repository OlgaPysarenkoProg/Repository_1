//Buy Bitcoin
const btc = prompt("What is Bitcoin price today?");
let message = true;
while (message === true) {
  message = confirm("Do you want to buy bitcoin?");
  if (message !== true) {
    break;
  } else {
    const dollar = prompt("How much $ do you have?");
    const result = dollar / btc;
    console.log(`You can buy ${result} BTC!`);
  }
}
